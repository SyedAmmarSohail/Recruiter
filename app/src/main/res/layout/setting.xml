                        android:text="60mins"
                        android:textColor="#5e5e5e" />

                    <TextView
                        android:id="@+id/setting_set_default_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="60mins"
                        android:textColor="#5e5e5e" />
                </LinearLayout>
            </LinearLayout>

