                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Tracker GPS ON/OFF Alert"
                        android:textColor="#5e5e5e"
                        android:textSize="18sp"
                        android:textStyle="bold" />

